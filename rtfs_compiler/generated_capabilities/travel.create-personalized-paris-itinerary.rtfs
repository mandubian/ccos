(capability "travel.create-personalized-paris-itinerary"
  :description "Create a personalized travel itinerary for Paris based on user preferences"
  :parameters {:destination "string" :dates "string" :budget "string" :preferences "map"}
  :steps (do
    (search.flights :destination $destination)
    (search.hotels :destination $destination :budget $budget)
    (search.activities :destination $destination :preferences $preferences)
    (optimize.itinerary :destination $destination :dates $dates :preferences $preferences)
  )
)